@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="row">
    <div class="col-md-8">
   
            <form method="post">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Try our Calculator</h3>
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        <label asp-for= "num1">Number 1</label>
                        <input asp-for="num1" class="form-control" style="width:70%;margin-bottom:5px">
                          <label asp-for="num2">Number 2</label>
                        <input asp-for="num2" class="form-control" style="width:70%;margin-bottom:5px">
                     
                    </div>
                    <div class="form-group">
                        <button type="submit" asp-page-handler="Add" class="btn btn-success">Add</button>
                          <button type="submit" asp-page-handler="Subtract" class="btn btn-success">Subtract</button>
                            <button type="submit" asp-page-handler="Divide" class="btn btn-success">Divide</button>
                             <button type="submit" asp-page-handler="Multiply" class="btn btn-success">Multiply</button>
                    </div>

                      <label asp-for="answer">Answer</label>
                        <input asp-for="answer" class="form-control" style="width:70%;margin-bottom:5px">
                         <h3>... @ViewData["answer"] ...</h3>
                      
          

<label asp-for="ErrorMessage">Error Message</label>
                       
                          <label asp-for="ErrorMessage"></label>
                </div>
            </div>
        </form>





</div>
</div>
